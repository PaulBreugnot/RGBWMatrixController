<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane xmlns="http://javafx.com/javafx/8.0.162-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="main.gui.views.settings.bouncingParticles.BouncingParticlesSettingsController">
   <children>
      <VBox alignment="TOP_CENTER">
         <children>
            <Label text="Seems like chemistry.">
               <VBox.margin>
                  <Insets bottom="10.0" />
               </VBox.margin>
            </Label>
            <Accordion>
              <panes>
                <TitledPane animated="false" text="Particles">
                     <content>
                        <VBox>
                           <children>
                              <Label text="Color type :" />
                              <VBox alignment="TOP_CENTER">
                                 <children>
                                    <RadioButton fx:id="RandomColorType" mnemonicParsing="false" onAction="#handleRandomButton" selected="true" text="Random" VBox.vgrow="NEVER" />
                                    <HBox alignment="TOP_CENTER" VBox.vgrow="NEVER">
                                       <children>
                                          <RadioButton fx:id="RawColorType" mnemonicParsing="false" onAction="#handleRawButton" text="Raw" />
                                          <RadioButton fx:id="ShadedColorType" mnemonicParsing="false" onAction="#handleShadedButton" text="Shaded" />
                                       </children>
                                    </HBox>
                                 </children>
                              </VBox>
                              <Label text="Hue :" />
                              <Slider fx:id="HueSlider" max="360.0" />
                              <Label text="Brightness :" />
                              <Slider fx:id="BrightnessSlider" max="1.0" />
                              <Label text="Saturation :" />
                              <Slider fx:id="SaturationSlider" max="1.0" />
                              <Separator>
                                 <VBox.margin>
                                    <Insets bottom="5.0" top="10.0" />
                                 </VBox.margin>
                              </Separator>
                              <Label text="Radius :" />
                              <CheckBox fx:id="FixedRadiusBox" mnemonicParsing="false" onAction="#handleFixedRadius" text="Fixed">
                                 <VBox.margin>
                                    <Insets top="5.0" />
                                 </VBox.margin>
                              </CheckBox>
                              <Label text="Minimum Radius :">
                                 <VBox.margin>
                                    <Insets top="5.0" />
                                 </VBox.margin>
                              </Label>
                              <Spinner fx:id="MinRadiusSpinner" />
                              <Label text="Maximum Radius :" />
                              <Spinner fx:id="MaxRadiusSpinner" />
                              <Separator>
                                 <VBox.margin>
                                    <Insets bottom="5.0" top="10.0" />
                                 </VBox.margin>
                              </Separator>
                              <Label text="Particle Number :" />
                              <Spinner fx:id="ParticleNumberSpinner" />
                           </children>
                        </VBox>
                     </content>
                </TitledPane>
                <TitledPane animated="false" text="Collision Area">
                     <content>
                        <VBox>
                           <children>
                              <Label text="Collisions Type :" />
                              <RadioButton mnemonicParsing="false" text="Edges">
                                 <VBox.margin>
                                    <Insets top="5.0" />
                                 </VBox.margin>
                              </RadioButton>
                              <RadioButton mnemonicParsing="false" text="Edges + Particles">
                                 <VBox.margin>
                                    <Insets top="5.0" />
                                 </VBox.margin>
                              </RadioButton>
                              <Separator>
                                 <VBox.margin>
                                    <Insets bottom="5.0" top="10.0" />
                                 </VBox.margin>
                              </Separator>
                              <Label text="Size :" />
                              <Label text="Width :">
                                 <VBox.margin>
                                    <Insets top="5.0" />
                                 </VBox.margin>
                              </Label>
                              <Spinner />
                              <Label text="Height :">
                                 <VBox.margin>
                                    <Insets top="5.0" />
                                 </VBox.margin>
                              </Label>
                              <Spinner />
                              <Separator>
                                 <VBox.margin>
                                    <Insets bottom="5.0" top="10.0" />
                                 </VBox.margin>
                              </Separator>
                              <Label text="Position :" />
                              <CheckBox mnemonicParsing="false" text="Centered">
                                 <VBox.margin>
                                    <Insets top="5.0" />
                                 </VBox.margin>
                              </CheckBox>
                              <Label text="Horizontal Offset :">
                                 <VBox.margin>
                                    <Insets top="5.0" />
                                 </VBox.margin>
                              </Label>
                              <Spinner />
                              <Label text="Vertical Offset :">
                                 <VBox.margin>
                                    <Insets top="5.0" />
                                 </VBox.margin>
                              </Label>
                              <Spinner />
                           </children>
                        </VBox>
                     </content>
                </TitledPane>
                  <TitledPane animated="false" text="Patterns">
                     <content>
                        <VBox>
                           <children>
                              <Label text="Coming Soon..." />
                           </children>
                        </VBox>
                     </content>
                  </TitledPane>
              </panes>
            </Accordion>
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </VBox>
   </children>
</AnchorPane>
