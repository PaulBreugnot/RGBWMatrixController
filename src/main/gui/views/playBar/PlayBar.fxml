<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<fx:root alignment="CENTER" type="HBox" xmlns="http://javafx.com/javafx/8.0.162-ea" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <Button fx:id="PlayButton" mnemonicParsing="false" onAction="#handlePlay" prefHeight="50.0" prefWidth="75.0" text="Play">
         <HBox.margin>
            <Insets right="30.0" />
         </HBox.margin>
      </Button>
      <Button fx:id="FrameByFrameButton" mnemonicParsing="false" onAction="#handleFrameByFrame" prefHeight="50.0" text="Frame By Frame" />
      <Button mnemonicParsing="false" onAction="#handleStop" prefHeight="50.0" prefWidth="75.0" text="Stop">
         <HBox.margin>
            <Insets left="30.0" />
         </HBox.margin>
      </Button>
   </children>
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
</fx:root>
